<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:id="@+id/block1"
            >
            <TextView
                android:id="@+id/passcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Passcode"
                android:focusable="true"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/abc_primary_text_material_light"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#986C73"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/passcode"
                android:layout_marginTop="15dp"
                android:id="@+id/passcodeview"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See Preview"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:id="@+id/preview"
                android:layout_below="@+id/passcodeview"
                android:textColor="@color/abc_primary_text_material_light"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECURITY"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/block1"
            android:textColor="#CD3C51"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/security"
            android:id="@+id/block2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong Attempt"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:id="@+id/wrongattempt"
                android:textColor="@color/abc_primary_text_material_light"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:id="@+id/attempt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Number of times user can try with wrong passcode)"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="05dp"
                android:layout_below="@+id/attempt"
                android:id="@+id/wrongattempttext"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#986C73"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/wrongattempttext"
                android:id="@+id/attempttext"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delay Lock Screen"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/attempttext"
                android:textColor="@color/abc_primary_text_material_light"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:id="@+id/delay"
                android:layout_below="@+id/attempttext"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#986C73"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/delay"
                android:id="@+id/delayview"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Passcode"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:id="@+id/recovery"
                android:layout_below="@+id/delayview"
                android:textColor="@color/abc_primary_text_material_light"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADVANCE"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#CD3C51"
            android:layout_below="@+id/block2"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/advance"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fake Text"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/abc_primary_text_material_light"
                android:id="@+id/selfie"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/pencil"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/penciltext"
                android:onClick="customtext"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Use this feature to show custom text on wrong attempt)"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="05dp"
                android:layout_below="@+id/selfie"
                />
        </RelativeLayout>
    </RelativeLayout>




</ScrollView>